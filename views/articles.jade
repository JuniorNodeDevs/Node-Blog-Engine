extends layout

block content
  .container
    h1 list of articles
    table.u-full-width
      thead
        tr
          th id
          th Title
      tbody
        for article in articles
          tr
            td #{article.id}
            td #{article.title || '(none)'}
            td
              a(href='/posts/edit/#{article.id}') Edit
    form(
      action = '/posts'
      method = 'post'
    )
      button.button-primary(type = 'submit') Create new article