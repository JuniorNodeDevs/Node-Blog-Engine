doctype html
html(ng-app='nbe')
  head
    title= blogName
    link(rel='stylesheet' media='screen' href='http://openfontlibrary.org/face/grupo3' type='text/css')
    link(rel='stylesheet' media='screen' href='http://openfontlibrary.org/face/selena' type='text/css')
    link(rel='stylesheet' media='screen' href='http://openfontlibrary.org/face/news-cycle' type='text/css')
    link(rel='stylesheet' media='screen' href='http://openfontlibrary.org/face/freeuniversal' type='text/css')
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/skeleton.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='shortcut icon', href='/images/rk.jpg', type='image/x-icon')
    //- Used for rendering JS vars to the page
    block vars
  body
    header
      .title
        .middle-title
          .inner-title
            h1= author
            nav
              ul
                li
                  a(href='/')
                    span Home
                li
                  a(href='/contact')
                    span Contact Me
                li
                  a(href='http://github.com/SomeKittens')
                    span GitHub
    block content

    footer
      | &copy; 2015 Randall Koutnik | 
      a(href='https://github.com/SomeKittens/Node-Blog-Engine') View Source

    // Libraries
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular.min.js')
    //- script(src='/lib/angular-route.js')
    script(src='/lib/ngCommonality.js')
    script(src='/lib/marked.js')
    script(src='/lib/angular-marked.js')

    //- script(src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.10.0/ui-bootstrap-tpls.min.js')

    // NBE code
    script(src='/js/ng.js')