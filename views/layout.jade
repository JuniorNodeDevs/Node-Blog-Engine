      // Libraries
      script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js')
      script(src='/lib/ngCommonality.js')
